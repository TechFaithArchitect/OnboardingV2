<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <description>DOMAIN LAYER - External Contact Credential Type Object - Record Trigger - Before a record is saved this flow checks to make sure that this value has not been created before and if it has been created before it will be prevented from being created.</description>
    <environments>Default</environments>
    <formulas>
        <name>UniqueKeyValue</name>
        <dataType>String</dataType>
        <expression>IF(
  ISBLANK($Record.Vendor__c),
  &apos;GLOBAL&apos;,
  $Record.Vendor__c
)
&amp; &apos;|&apos; &amp;
UPPER($Record.Name)</expression>
    </formulas>
    <interviewLabel>DOMAIN - External Contact Credential Type - RCD - Before Save Flow to Prevent Duplicates {!$Flow.CurrentDateTime}</interviewLabel>
    <label>DOMAIN - External Contact Credential Type - RCD - Before Save Flow to Prevent Duplicates</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Create_Unique_Key</name>
        <label>Create Unique Key</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>Unique_Key__c</field>
            <value>
                <elementReference>UniqueKeyValue</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Create_Unique_Key</targetReference>
        </connector>
        <object>External_Contact_Credential_Type__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
