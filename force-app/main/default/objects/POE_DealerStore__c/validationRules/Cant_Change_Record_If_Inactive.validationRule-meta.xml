<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cant_Change_Record_If_Inactive</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 NOT(ISCHANGED(POE_Status__c)),
 POE_Status__c = &apos;Inactive&apos;,
 NOT(ISNEW())
)</errorConditionFormula>
    <errorMessage>Cannot update fields of an inactive DealerStore.</errorMessage>
</ValidationRule>
